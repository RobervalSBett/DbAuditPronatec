<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="localPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.cortez.samples.javaee7angular.data.Clientes</class>
    <class>com.cortez.samples.javaee7angular.data.Auditorias</class>
    <class>com.cortez.samples.javaee7angular.data.Auditores</class>
    <class>com.cortez.samples.javaee7angular.data.Bairros</class>
    <class>com.cortez.samples.javaee7angular.data.Ceps</class>
    <class>com.cortez.samples.javaee7angular.data.Certificadoras</class>
    <class>com.cortez.samples.javaee7angular.data.CheckList</class>
    <class>com.cortez.samples.javaee7angular.data.Cidades</class>
    <class>com.cortez.samples.javaee7angular.data.Colaboradores</class>
    <class>com.cortez.samples.javaee7angular.data.EquipeAuditores</class>
    <class>com.cortez.samples.javaee7angular.data.NaoConformidades</class>
    <class>com.cortez.samples.javaee7angular.data.Ocorrencias</class>
    <class>com.cortez.samples.javaee7angular.data.Person</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
     <!-- <property name="javax.persistence.jdbc.password" value="SAu4wS7Gkb"/> -->
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/DbAudit"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    <!-- <property name="hibernate.archive.autodetection" value="classe"/>
     <property name="hibernate.archive.autodetection" value="Clientes"/> -->
    </properties>
  </persistence-unit>
</persistence>
